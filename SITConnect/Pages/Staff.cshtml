@page
@model SITConnect.Pages.StaffModel
@{
}

<style>
    img {
        display: block;
        margin-left: auto;
        margin-right: auto;
    }
</style>
<h1>Hello Staff!</h1>
<META HTTP-EQUIV="Refresh" CONTENT="60">
<p>First Name: @Model.user.Fname</p>
<p>Last Name: @Model.user.Lname</p>
<p>Encrypted Credit Card: @Model.user.Card_number</p>
<p>Decrypted Credit Card: @Model.decrypt</p>
<p>Birth Date: @Model.user.BirthDate.ToShortDateString()</p>
<img src="~/Upload_image/@Model.user.Photo" style="width:60%;" />
